<div class="one-third">
  <% if @plant.image.present? %>
      <%=image_tag @plant.image_url, :class=>"modal plant_profile_pic content center full-width wow fadeInLeft animated"%>
      <%else %>
      <%=image_tag "default_plant.png", :class=>"plant_profile_pic 
       center full-width wow fadeInDown animated"%>
  <%end%>



<section class=" center wow one-one fadeInLeft animated style="visibility: visible;"">
<div class=" container new_forms">
<p class="make_bold" style="color:#f4716a;">نظرات کاربران</p>
<% @plant.comments.each do |cmnt| %>

<div class="comment_box">
<p class="make_bold">
  <%= cmnt.content %>
</p>

<p class="user_name_cm">
  <%= cmnt.user.profile.first_name %>
  <%= cmnt.user.profile.last_name %>
</p>

<%if has_auth(cmnt)%>
  <%= link_to 'حذف نظر', cmnt, method: :delete, data: { confirm: 'Are you sure?' } , :class=>"b_farsi btn btn-danger btn-xs" %>
<%end%>
<p class="make_right"><%= cmnt.created_at %></p>

</div>

<% end %>


<%= form_for(@comment) do |f| %>
  <% if @comment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@comment.errors.count, "error") %> prohibited this comment from being saved:</h2>

      <ul>
      <% @comment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.hidden_field :commentable_id , :value => @plant.id %>
  </div>
  <div class="field">
    <%= f.hidden_field :commentable_type  , :value =>"Plant"%>
  </div>
  <div class="field  make_center">
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit  'ثبت نظر' , :class=>"cm_bt button" %>
  </div>
<% end %>
</div>
</section>





</div>

