<p id="notice"><%= notice %></p>

<h1>Listing Planters</h1>

<table>
  <thead>
    <tr>
      <th>name</th>
      <th>Brief desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @planters.each do |planter| %>
      <tr>
        <td><%= planter.name %></td>
        <td><%= planter.brief_desc.first(10) %></td>
        <td><%= link_to 'Show', planter %></td>
        <td><%= link_to 'Edit', edit_planter_path(planter) %></td>
        <td><%= link_to 'Destroy', planter, method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

